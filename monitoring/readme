
## The default login grafana:
## username: admin
## password: prom-operator 
# kubectl get secret --namespace monitoring kube-prometheus-stack-grafana -o jsonpath="{.data.admin-password}" 

helm repo add prometheus-community https://prometheus-community.github.io/helm-charts
helm repo add stable https://kubernetes-charts.storage.googleapis.com/
helm repo update

## LINUX
helm install \
prometheus-operator stable/prometheus-operator \
-f monitoring/values.yaml \
--namespace monitoring

## WINDOWS
helm install `
kube-prometheus-stack prometheus-community/kube-prometheus-stack `
-f monitoring/values.yaml `
--namespace monitoring


kubectl port-forward -n monitoring service/kube-prometheus-stack-prometheus --address 0.0.0.0 9090:9090

kubectl port-forward -n monitoring service/kube-prometheus-stack-grafana --address 0.0.0.0 8888:80